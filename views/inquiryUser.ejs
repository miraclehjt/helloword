<!DOCTYPE html>
<html>
<head>
    <title>用户查询</title>
    <link rel='stylesheet' href='/stylesheets/systemmanage.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <link rel="stylesheet" href="/stylesheets/dataTables.bootstrap.css" >
</head>
<body>
    <script type="text/javascript" src="javascripts/jquery-2.1.4.min.js"></script>
    <script type="text/javascript" src="javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/jquery.metisMenu.js"></script>
    <!-- Data Tables -->
    <script src="/javascripts/jquery.dataTables.js"></script>
    <script src="/javascripts/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('.dataTables-example').dataTable();
        });
    </script>
    <h2>用户查询</h2>

    <div>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#usernameInquiry" aria-controls="usernameInquiry" role="tab" data-toggle="tab">按职工号查询</a></li>
            <li role="presentation"><a href="#nameInquiry" aria-controls="profile" role="tab" data-toggle="tab">按姓名查询</a></li>
            <li role="presentation"><a href="#departInquiry" aria-controls="messages" role="tab" data-toggle="tab">按部门查询</a></li>
            <li role="presentation"><a href="#id_cardInquiry" aria-controls="settings" role="tab" data-toggle="tab">按身份证查询</a></li>
        </ul>
        <% var state=(state=="block")?'block':'none';%>
        <% var len=(userlist!=null)?userlist.length:0;%>
        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="usernameInquiry">
                <form class="form-inline" action="/inquiryByUserId" method="post">
                    <div class="form-group">
                        <input type="text" name="username" class="form-control" id="username" placeholder="请输入职工工号!">
                    </div>
                    <button type="submit" class="btn btn-primary" id="inquiry">查询</button>
                </form>
                <span id="check-block" style="color: red;">&nbsp;</span>
                <div class="row" style="display: <%=state%>">
                    <div class="col-lg-12">
                        <section class="panel">
                            <table class="table table-striped table-advance table-hover dataTables-example">
                                <thead>
                                <tr>
                                    <th> 序 号</th>
                                    <th> 工 号</th>
                                    <th> 姓 名</th>
                                    <th> 性 别</th>
                                    <th> 民 族</th>
                                    <th> 籍 贯</th>
                                    <th> 出生日期</th>
                                    <th> 政治面貌</th>
                                    <th> 所属部门</th>
                                </tr>
                                </thead>
                                <tbody>
                                <%for(var i=0;i<len; i++){%>
                                <%var usersex=(userlist[i].sex==false)?"男":"女";%>
                                <tr>
                                    <td><span class="label label-success label-mini"><%= i+1 %></span></td>
                                    <td class="username"><%= userlist[i].username %></td>
                                    <td><span><%= userlist[i].name %></span></td>
                                    <td><span ><%= usersex  %></span></td>
                                    <td><span><%= userlist[i].nation %></span></td>
                                    <td><span><%= userlist[i].place %></span></td>
                                    <td><span><%= userlist[i].born_date %></span></td>
                                    <td><span><%= userlist[i].political_status %></span></td>
                                    <td><span><%= userlist[i].department %></span></td>
                                </tr>
                                <%}
                                %>
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="nameInquiry">
                    <form class="form-inline" action="/inquiryByName" method="post">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" id="name" placeholder="请输入职工姓名!">
                        </div>
                        <button type="submit" class="btn btn-primary" id="inquiry">查询</button>
                    </form>
            </div>
            <div role="tabpanel" class="tab-pane" id="departInquiry">
                    <form class="form-inline" action="/inquiryByDepartment" method="post">
                        <div class="form-group">
                            <select class="form-control" name="department" id="department">
                                <option>请 选 择 部 门！</option>
                                <option>党的机关</option>
                                <option>人大机关</option>
                                <option>行政机关</option>
                                <option>政协机关</option>
                                <option>审判机关</option>
                                <option>检察机关</option>
                                <option>共青团</option>
                                <option>妇联</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary" id="inquiry">查询</button>
                    </form>
            </div>
            <div role="tabpanel" class="tab-pane" id="id_cardInquiry">
                    <form class="form-inline" action="/inquiryByIdCard" method="post">
                        <div class="form-group">
                            <input type="text" name="id_card" class="form-control" id="id_card" placeholder="请输入职工身份证!">
                        </div>
                        <button type="submit" class="btn btn-primary" id="inquiry">查询</button>
                    </form>
            </div>
        </div>
    </div>
</body>
</html>