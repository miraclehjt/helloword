    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2>用户列表</h2>
                </header>
                <table class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                    <tr>
                        <th> 序 号</th>
                        <th> 工 号</th>
                        <th> 姓 名</th>
                        <th> 性 别</th>
                        <th> 民 族</th>
                        <th> 籍 贯</th>
                        <th> 出生日期</th>
                        <th> 政治面貌</th>
                        <th> 所属部门</th>
                        <th> 操 作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i=0; i<userlist.length;i++){%>
                      <%var usersex=(userlist[i].sex==false)?"男":"女";%>
                    <tr>
                        <td><span class="label label-success label-mini"><%= i+1 %></span></td>
                        <td class="username"><%= userlist[i].username %></td>
                        <td><span><%= userlist[i].name %></span></td>
                        <td><span ><%= usersex  %></span></td>
                        <td><span><%= userlist[i].nation %></span></td>
                        <td><span><%= userlist[i].place %></span></td>
                        <td><span><%= userlist[i].born_date %></span></td>
                        <td><span><%= userlist[i].political_status %></span></td>
                        <td><span><%= userlist[i].department %></span></td>
                        <td>
                            <a href="/modifyUserPage/<%= userlist[i]._id %>" class="btn btn-primary btn-xs modify"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href="/deleteUser/<%= userlist[i].username %>" class="btn btn-danger btn-xs delete"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                    <%}%>
                    </tbody>
                </table>
